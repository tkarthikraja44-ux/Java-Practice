import java.util.*;
class Main
{
    public static void main(String []args)
    {
        Scanner scanner  =  new Scanner(System.in);
        int row  = scanner.nextInt();
        int col  = scanner.nextInt();
        int [][]arr = new int[row][col];
        for(int i=0;i<row;i++)
        {
            for(int j=0;j<col;j++)
            {
                arr[i][j] = scanner.nextInt();
            }
        }
        int max = 0;
        for(int i=0;i<row;i++)
        { 
            int sum=0;
            for(int j=0;j<col;j++)
            {
                sum+=arr[i][j];
            }
            if(sum>max)
            {
                max = sum;
                
            }
        }
        System.out.print(max);
    }
}
